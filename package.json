{
  "name": "fantasy-forgewright",
  "version": "0.0.1",
  "description": "A distraction-free, keyboard-first markdown editor for fantasy writers",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.{js,css,html,md}",
    "format:check": "prettier --check src/**/*.{js,css,html,md}",
    "bundle-analyzer": "vite-bundle-analyzer dist",
    "security-audit": "npm audit --audit-level=moderate",
    "test:smoke": "playwright test --grep='smoke'",
    "test:a11y": "axe-playwright",
    "test:bundle-size": "bundlesize",
    "analyze-bundle": "npm run bundle-analyzer",
    "deploy:waf": "node scripts/deploy-waf.js",
    "uptime-check": "node scripts/uptime-check.js",
    "prepare": "husky install || exit 0"
  },
  "keywords": [
    "markdown",
    "editor",
    "fantasy",
    "writing",
    "pwa",
    "offline-first",
    "gutenberg"
  ],
  "author": "Fantasy Forgewright",
  "license": "MIT",
  "dependencies": {
    "@codemirror/autocomplete": "^6.11.1",
    "@codemirror/commands": "^6.3.3",
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/language": "^6.9.3",
    "@codemirror/search": "^6.5.4",
    "@codemirror/state": "^6.4.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.23.0",
    "@lezer/highlight": "^1.1.6",
    "codemirror": "^6.0.1",
    "dompurify": "^3.0.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lunr": "^2.3.9"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.8",
    "babel-jest": "^30.0.5",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "fake-indexeddb": "^6.1.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "license-checker": "^25.0.1",
    "prettier": "^3.1.0",
    "vite": "^7.1.3",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^1.0.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "bundlesize": [
    {
      "path": "dist/assets/*.js",
      "maxSize": "800kb",
      "compression": "gzip"
    },
    {
      "path": "dist/assets/*.css",
      "maxSize": "50kb",
      "compression": "gzip"
    }
  ],
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}
