{
  "name": "fantasy-forgewright",
  "version": "1.0.0",
  "description": "A distraction-free, keyboard-first markdown editor for fantasy writers",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.{js,css,html,md}",
    "format:check": "prettier --check src/**/*.{js,css,html,md}",
    "bundle-analyzer": "vite-bundle-analyzer dist",
    "security-audit": "npm audit --audit-level=moderate"
  },
  "keywords": [
    "markdown",
    "editor",
    "fantasy",
    "writing",
    "pwa",
    "offline-first",
    "gutenberg"
  ],
  "author": "Fantasy Forgewright",
  "license": "MIT",
  "dependencies": {
    "@codemirror/commands": "^6.3.3",
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/state": "^6.4.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.23.0",
    "codemirror": "^6.0.1",
    "dompurify": "^3.0.5",
    "lunr": "^2.3.9"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.8",
    "babel-jest": "^30.0.5",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "fake-indexeddb": "^6.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "vite": "^7.1.3",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^1.0.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}
