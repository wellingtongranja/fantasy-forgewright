# Test Environment Configuration
NODE_ENV=test

# Application Settings
VITE_APP_TITLE=Fantasy Editor (Test)
VITE_APP_VERSION=0.0.2-test
VITE_DOMAIN=localhost
VITE_BASE_URL=http://localhost:4173

# GitHub OAuth Configuration (Test App)
# SECURITY: Use development OAuth app for testing, never commit real values
GITHUB_TEST_TOKEN=your_test_token_for_github_api
# VITE_GITHUB_CLIENT_ID=your_test_github_client_id (REMOVED - loaded at runtime)
VITE_GITHUB_REDIRECT_URI=http://localhost:4173/auth/callback

# Error Tracking (Disabled in tests)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=test

# Feature Flags (Disabled for consistent testing)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_DEBUG_MODE=false

# API Configuration
VITE_GITHUB_API_URL=https://api.github.com
VITE_GUTENBERG_API_URL=https://gutendex.com

# Test-specific Settings
VITE_CACHE_DURATION=0
VITE_MAX_DOCUMENT_SIZE=1048576
VITE_TEST_MODE=true

# Test Database
VITE_TEST_DB_NAME=fantasy_editor_test

# Mock Settings
VITE_MOCK_GITHUB_API=false
VITE_MOCK_GUTENBERG_API=false

# Performance Testing
VITE_PERFORMANCE_BUDGET_JS=500000
VITE_PERFORMANCE_BUDGET_CSS=50000
VITE_PERFORMANCE_BUDGET_TOTAL=1000000

# Security Testing
VITE_ALLOW_UNSAFE_EVAL=false
VITE_STRICT_CSP=true