# Fantasy Editor OAuth Proxy Environment Variables
# Copy this file to .env and fill in your provider credentials

# GitHub OAuth App credentials
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# GitLab OAuth App credentials (GitLab.com or self-hosted)
GITLAB_CLIENT_ID=your_gitlab_client_id
GITLAB_CLIENT_SECRET=your_gitlab_client_secret
GITLAB_BASE_URL=https://gitlab.com

# Bitbucket OAuth Consumer credentials
BITBUCKET_CLIENT_ID=your_bitbucket_client_id
BITBUCKET_CLIENT_SECRET=your_bitbucket_client_secret

# Generic Git provider (Gitea, Forgejo, etc.)
GENERIC_GIT_CLIENT_ID=your_generic_git_client_id
GENERIC_GIT_CLIENT_SECRET=your_generic_git_client_secret
GENERIC_GIT_BASE_URL=https://your-git-server.com
GENERIC_GIT_PROVIDER_NAME=gitea
GENERIC_GIT_DISPLAY_NAME=Your Git Server

# OAuth redirect URI (should match your app's callback URL)
OAUTH_REDIRECT_URI=https://forgewright.io/

# CORS origin (your app's domain)
CORS_ORIGIN=https://forgewright.io

# Development settings
# OAUTH_REDIRECT_URI=http://localhost:3000/
# CORS_ORIGIN=http://localhost:3000